    <select id="findAllSc" resultMap="cdResultMap">
        SELECT
               A.MEM_NUM
             , A.CD_NO
             , A.CD_GROUP
             , A.CD_TITLE
             , A.CD_CONTENT
             , A.CD_START
             , A.CD_END
             , A.CD_ALLDAY
             , A.CD_COLOR
             , A.CD_TYPE
             , A.CD_WDATE
          FROM CD_CALENDAR A
    </select>

    <!-- 필수값만 들어오는 ajax 전체조회 -->
    <select id="findAllCal" resultMap="cdResultMap">
        SELECT
               A.MEM_NUM
             , A.CD_NO
             , A.CD_GROUP
             , A.CD_TITLE
             , A.CD_CONTENT
             , A.CD_START
             , A.CD_END
             , A.CD_ALLDAY
             , A.CD_COLOR
             , A.CD_TYPE
             , A.CD_WDATE
          FROM CD_CALENDAR A
    </select>

</mapper>